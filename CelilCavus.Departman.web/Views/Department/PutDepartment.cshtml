
@{
    ViewBag.Title = "PutDepartment";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model Department
@using (Html.BeginForm("PutDepartment", "Department", FormMethod.Post))
{
    @Html.Label("Departman Adı : *", new { @class = "mt-1 mb-1" })
    @Html.TextBoxFor(x => x.DepartmanName, new { @class = "form-control" })
    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
}
@if (ViewBag.Valid == true)
{
    @Html.ValidationMessageFor(x => x.DepartmanName, (string)ViewBag.Errormessage, new { @class = "alert bg-danger text-white d-block mt-2 mb-2" });
}


